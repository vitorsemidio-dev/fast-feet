generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMINISTRATOR
  DELIVERY_DRIVER
  RECIPIENT
}

model User {
  id        String   @id @default(uuid())
  cpf       String   @unique
  name      String
  password  String
  role      Role     @default(RECIPIENT)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  orders Order[] @relation("recipient")

  shipments Order[] @relation("shipper")

  @@map("users")
}

enum OrderStatus {
  PENDING
  SHIPPED
  DELIVERED
  RETURNED
}

model Order {
  id   String @id @default(uuid())
  name String

  postageAt DateTime    @map("postage_at")
  status    OrderStatus @default(PENDING)

  recipientId String @map("recipient_id")
  recipient   User   @relation("recipient", fields: [recipientId], references: [id])

  shipperId String? @map("shipper_id")
  shipper   User?   @relation("shipper", fields: [shipperId], references: [id])

  @@map("orders")
}
